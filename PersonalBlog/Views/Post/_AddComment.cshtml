@using PersonalBlog.Data.ViewModels;
@inject UserManager<AppUser> UserManager;
@model NewCommentVM;


@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Comment" asp-action="Create" class="card col-8 mx-auto p-2 bg-warning bg-opacity-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CommentText" class="control-label"></label>
            <input asp-for="CommentText" class="form-control" />
            <span asp-validation-for="CommentText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-outline-success float-right" type="submit" value="Create" />
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

        <textarea id="" cols="30" rows="3" name="comment_text" required></textarea>
        <button class="col-3 ms-auto mt-1 btn btn-warning" type="submit">Post</button>
    </form>
}
